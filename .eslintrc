{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            2
        ],
		"quotes": [
            "error",
            "single"
        ],
		"semi": [
            "error",
            "always"
        ],
},
	"globals": {
	"describe": false,
	"it": false,
	"beforeEach": false,
	"afterEach": false,
	"before": false,
	"after": false,
    "$": true,
    "checkAuth": true
 },
}
